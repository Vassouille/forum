{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>{{ theme.name }}</h1>
                <p>{{ theme.description }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {% set paginationvar %}
                    {% if pagination != [] %}
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item {% if active == 1 %}disabled{% endif %}">
                                    <a class="page-link" href="{{ path('theme_list', {'id': theme.id, 'page': 1}) }}" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                {% if active != 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('theme_list', {'id': theme.id, 'page': active-1}) }}" aria-label="Previous">
                                            <span aria-hidden="true">‹</span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </li>
                                {% endif %}
                                {% for page in pagination %}
                                    <li class="page-item {% if page == active %}active{% endif %}"><a class="page-link" href="{{ path('theme_list', {'id': theme.id, 'page': page}) }}">{{ page }}</a></li>
                                {% endfor %}
                                {% if active != max %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('theme_list', {'id': theme.id, 'page': active+1}) }}" aria-label="Previous">
                                            <span aria-hidden="true">›</span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </li>
                                {% endif %}
                                <li class="page-item {% if active == max %}disabled{% endif %}">
                                    <a class="page-link" href="{{ path('theme_list', {'id': theme.id, 'page': max}) }}" aria-label="Previous">
                                        <span aria-hidden="true">»</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>

                            </ul>
                        </nav>
                    {% endif %}
                {% endset %}
                {{ paginationvar }}
                <table class="table">
                    <tbody>
                    {% if discussions != [] %}
                        {% for discussion in discussions %}
                            <tr>
                                <td><p>Par <a href="#">{{ discussion.username }}</a> le {{ discussion.date|date('d/m/Y') }} à {{ discussion.date|date('h:m') }}</p></o><p>{{ discussion.content }}</p></td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        Il n'y a aucune discussion
                    {% endif %}
                    </tbody>
                </table>
                {{ paginationvar }}
            </div>
        </div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <div class="row">
                <div class="col">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                    <button id="close" class="btn btn-dark">Fermer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}